@model IEnumerable<Kurs>

   <h2>kurs Listesi</h2>
    <a class="btn btn-primary" href="/Kurs/Create">Kurs ekle</a>
    <hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m=>m.KursId)</th>
            <th>@Html.DisplayNameFor(m=>m.Baslık)</th>
            <th>@Html.DisplayNameFor(m=>m.Ogretmen.AdSoyad)</th>
            
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>

        @foreach(var item in Model)
        {
        <tr>
                <td>@Html.DisplayFor(modelItem=>item.KursId)</td>
                <td>@Html.DisplayFor(modelItem=>item.Baslık)</td>
                <td>@Html.DisplayFor(modelItem=>item.Ogretmen.AdSoyad)</td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.KursId" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.KursId" class="btn btn-sm btn-danger">Delete</a>
            </td>
            


        </tr>

        }
    </tbody>
</table>