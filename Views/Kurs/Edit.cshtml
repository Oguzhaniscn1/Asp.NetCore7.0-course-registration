@model KursViewModel

<h2>kurs Güncelle</h2>
<hr />


<div class="row">
    <div class="col-8">
        <form asp-controller="Kurs" asp-action="Edit" method="post">
            <div asp-validation-summary="All"></div>

            <input type="hidden" asp-for="KursId">

            <div class="mb-3">
                <label asp-for="Baslık" class="form-label">Baslık</label>
                <input asp-for="Baslık" class="form-control">
            </div>
            <div class="mb-3">
                <label asp-for="OgretmenId" class="form-label">Ogretmen</label>
                <select asp-for="OgretmenId" asp-items="ViewBag.Ogretmenler" class="form-select">
                    <option>seçiniz</option>
                </select>
             </div>

            <button type="submit" class="btn btn-secondary">Kaydet</button>

        </form>
    </div>
    <div class="col-4">
        <h4>Öğrenciler</h4>
        <hr />
        <ul>
            @foreach(var item in Model.KursKayitlari)
            {
                <li>
                    @item.Ogrenci.AdSoyad
                </li>
            }
        </ul>
    </div>
</div>
