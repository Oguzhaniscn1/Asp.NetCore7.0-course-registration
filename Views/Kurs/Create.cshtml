<form asp-controller="Kurs" asp-action="Create" method="post">
    <div asp-validation-summary="All"></div>
    <div class="mb-3">
        <label asp-for="Baslık" class="form-label">Kurs Başlık</label>
        <input asp-for="Baslık" class="form-control">
